{
    "name": "Functions Dev Container",
    "image": "mcr.microsoft.com/devcontainers/base:jammy",
    "containerUser": "vscode",
    "features": {
        "azure-cli": {
          "version":"latest"
        },
        "ghcr.io/devcontainers/features/terraform:latest":{ 
          "version":"latest",
          "tflint":"latest"
        }
    },  
    "customizations": {
      "vscode": {
        "extensions": [
          // Azure
          "ms-vscode.vscode-node-azure-pack",
          // Terraform
          "hashicorp.terraform"
        ]
      }
    },
    "remoteUser": "vscode"
  }
